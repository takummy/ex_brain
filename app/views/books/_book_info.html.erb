<div class="card-img-top">
  <% if @book.image.url %>
    <%= image_tag @book.image.url(:thumb), class: "book_img" %>
  <% else %>
    <%= image_tag 'default_book_image.png', class: "book_img" %>
  <% end %>
</div>

<h3>
  <%= @book.title %>
</h3>

<%= link_to "#{t('buttons.edit')}", edit_book_path(@book), class: "btn btn-warning rounded-pill" %>

<hr class="info_hr">

<h4><%= @book.description %></h4>
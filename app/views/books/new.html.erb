<div class="container container-small">
  <div class="panel panel-default">
    <div class= "panel-heading">
      <div class="row">
        <div class="text-center">
          <span><strong>本を登録する</strong></span>
        </div>
      </div>
    </div>

    <div class="panel-body">
      <div class="row">
        <div class="col-md-10 col-md-offset-1 col-center">
          <%= form_with(model: @book, local: true) do |f| %>

            <%= render 'shared/error_messages', object: f.object %>

            <div class="form-group row">
              <div class="col-sm-2">
                <%= f.label :image %>
              </div>

              <div class="col-sm-8">
                <%= f.file_field :image %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-2">
                <%= f.label :title %>
              </div>
              
              <div class="col-sm-8">
                <%= f.text_field :title, class:'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-2">
                <%= f.label :description %>
              </div>
              
              <div class="col-sm-8">
                <%= f.text_area :description, class:'form-control'%>
              </div>

              <div id="book-submit" class="col-sm-2">
                <%= f.submit "登録", class: 'btn btn-success form-control'%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>